{
	"agent": {
		"metrics_collection_interval": 60,
		"run_as_user": "root"
	},
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
						"file_path": "/home/ec2-user/.pm2/logs/wbd-api-out.log",
						"log_group_name": "/aws/ec2/martech-api",
						"log_stream_name": "{instance_id}/application-stdout",
						"timezone": "UTC"
					},
					{
						"file_path": "/home/ec2-user/.pm2/logs/wbd-api-error.log",
						"log_group_name": "/aws/ec2/martech-api",
						"log_stream_name": "{instance_id}/application-stderr",
						"timezone": "UTC"
					},
					{
						"file_path": "/var/log/nginx/access.log",
						"log_group_name": "/aws/ec2/martech-api",
						"log_stream_name": "{instance_id}/nginx-access",
						"timezone": "UTC"
					},
					{
						"file_path": "/var/log/nginx/error.log",
						"log_group_name": "/aws/ec2/martech-api",
						"log_stream_name": "{instance_id}/nginx-error",
						"timezone": "UTC"
					}
				]
			}
		}
	},
	"metrics": {
		"namespace": "MartechAPI",
		"metrics_collected": {
			"cpu": {
				"measurement": [
					{
						"name": "cpu_usage_idle",
						"rename": "CPU_IDLE",
						"unit": "Percent"
					},
					{
						"name": "cpu_usage_iowait",
						"rename": "CPU_IOWAIT",
						"unit": "Percent"
					}
				],
				"metrics_collection_interval": 60,
				"totalcpu": false
			},
			"disk": {
				"measurement": [
					{
						"name": "used_percent",
						"rename": "DISK_USED",
						"unit": "Percent"
					}
				],
				"metrics_collection_interval": 60,
				"resources": ["*"]
			},
			"mem": {
				"measurement": [
					{
						"name": "mem_used_percent",
						"rename": "MEM_USED",
						"unit": "Percent"
					}
				],
				"metrics_collection_interval": 60
			}
		}
	}
}
